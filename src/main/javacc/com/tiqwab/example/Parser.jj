// --- Definition of tokens ---

// White space
SKIP: {
    " "
    | "\t"
    | "\r"
    | "\f"
}

TOKEN: {
    < NEWLINE: "\n" >
}

// Operator
TOKEN: {
    < ADD: "+" >
    | < SUBTRACT: "-" >
    | < MULT: "*" >
    | < DIV: "/" >
}

// Number
TOKEN: {
    < NUMBER: (["0"-"9"])+ >
}

// --- Translation Scheme ---

// E -> T ("+" T | "-" T)*
// T -> F ("*" T | "/" F)*
// F -> N

void start(): {
} {
    expression() <NEWLINE>
}

void expression(): {
} {
    term() ( <ADD> term() | <SUBTRACT> term() )*
}

void term(): {
} {
    factor() ( <MULT> factor() | <DIV> factor() )*
}

void factor(): {
} {
    <NUMBER>
}
